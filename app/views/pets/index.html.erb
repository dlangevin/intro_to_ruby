<h1>
  Looks like we have
  <span class="pet-count"><%= @pets.length %></span>
  <span class="pet-type">Pets</span>
</h1>

<div class="row">
  <div class="col-xs-12 col-sm-6">
    <form>
      <div class="form-group">
        <label for="pet_type">Filter by type</label>
        <select id="pet_type" class="form-control" name="pet_type">
          <option value="Pet">All Types</option>
          <% @pet_types.each do |type| %>
            <option value="<%= type %>" <%= 'selected="selected"' if type == params[:pet_type] %>><%= type %></option>
          <% end %>
        </select>
      </div>
      <div class="form-group">
        <button type='submit' class='btn btn-primary'>Submit</button>
      </div>
    </form>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Pet Type</th>
      <th>Pet Name</th>
    </tr>
  </thead>
  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.owner.first_name %></td>
        <td><%= pet.pet_type %></td>
        <td><%= pet.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>